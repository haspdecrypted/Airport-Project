create database AP;

use ap;

(airport table >> airport_mod.dat)
--------------------------------------
create table airport (airport_id int,airport_name string,airport_city string,airport_country string,airport_faa string,airport_icao string,
airport_lat double,airport_long double,airport_alt double,airport_timezone double,airport_dst string,airport_tz string) 
row format delimited fields terminated by ','; 

(routes >> routes.dat)
-----------------------------
create table routes (route_iata string,route_airid int,route_source_iata string,route_source_airid int,route_des_iata string,route_des_airid int,
route_codeshare string,route_stops int,route_equip string) row format delimited fields terminated by ',';

(final_airlines >> final_airlines)
--------------------------------------
create table final_airlines (airlineID string,airline_name string, airline_alias string, airline_iata string, airline_icao string,callsign string,
territory string, active string) row format delimited fields terminated by ',';

load data local inpath "path of your data file" into table table_name;
